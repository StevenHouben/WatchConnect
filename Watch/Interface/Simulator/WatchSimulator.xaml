<Window x:Class="Watch.Interface.Simulator.WatchSimulator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:surface="http://schemas.microsoft.com/surface/2008"  
        Title="WatchSimulator" Height="739.2" Width="1058.4" MinWidth="800" MinHeight="1000">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="watchface.png"/>
        </Grid.Background>
        <Border x:Name="Border" BorderBrush="Yellow" BorderThickness="10" Margin="39,98,26.2,163.2" Grid.ColumnSpan="2">
            <Grid>
                <surface:SurfaceScrollViewer  HorizontalScrollBarVisibility="Hidden" Background="Black"
                                 VerticalScrollBarVisibility="Hidden"
                                 SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical"
                                 PanningMode="VerticalOnly">
                    <StackPanel x:Name="Body" Orientation="Vertical"/>
                </surface:SurfaceScrollViewer>
            </Grid>

        </Border>
    </Grid>
</Window>
