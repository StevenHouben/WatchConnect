<Window x:Class="DataRecorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="BtnStart" FontSize="20" Content="Start Recording" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="155" Height="44"/>
        <Button x:Name="BtnStop" FontSize="20" Content="Stop and Save" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top" Width="155" Height="44"/>
        <ListBox x:Name="ListBox" HorizontalAlignment="Left" Height="289" Margin="223,22,0,0" VerticalAlignment="Top" Width="285"/>
        <TextBox x:Name="TxtLabel" FontSize="20" HorizontalAlignment="Left" Height="39" Margin="10,108,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="155"/>
        <TextBox x:Name="TxtFileName" FontSize="20" HorizontalAlignment="Left" Height="39" Margin="10,152,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="155"/>

    </Grid>
</Window>
